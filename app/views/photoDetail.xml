<Alloy>
	<Window class="container">
		<RightNavButton platform="ios">
			<Button id="reportButton" />
		</RightNavButton>
		
		<View id="mainWrap">
			<ListView id="listView">
				<Templates>
					<Require id="photoTemplate" src="photoItemTemplate"/>
					<ItemTemplate class="commentTemplate" name="commentTemplate">
						<Label class="time" bindId="time"></Label>
						<Label class="userName" bindId="userName"></Label>
						<MaskedImage class="maskedProfile" bindId="profileImage"></MaskedImage>
						<Label class="commentContent" bindId="content"></Label>
						<ImageView onLoad="hiddenProfileOnLoad" class="hiddenProfile" bindId="hiddenProfile"></ImageView>
					</ItemTemplate>
				</Templates>
				<ListSection id="contentSection"></ListSection>
				<ListSection id="controlPanelSection">
				</ListSection>
				<ListSection id="mapSection"></ListSection>
				<ListSection id="commentSection"></ListSection>
			</ListView>
			
			
			<View class="commentFormWrap">
				<View id="textFieldLine" />
				<TextArea id="commentField"></TextArea>
				<Button id="sendBtn"></Button>
			</View>
		</View>

        <OptionDialog id="reportDialog" title="report inappropriate" destructive="0">
            <!-- The Options tag sets the options property. -->
            <Options> 
                <Option>report</Option>
                <Option>cancel</Option>
            </Options>
        </OptionDialog>
        <OptionDialog id="unReportDialog" title="aleady reported" >
            <!-- The Options tag sets the options property. -->
            <Options> 
                <Option>unReport</Option>
                <Option>cancel</Option>
            </Options>
        </OptionDialog>

	</Window>
</Alloy>