<Alloy>
	<Window class="container">
		<RightNavButton platform="ios">
			<Button id="cameraBtn" class="cameraBtn" onClick="showCamera"></Button>
		</RightNavButton>
		<Button id="cameraBtn" platform="android" onClick="showCamera"></Button>
		
		<ScrollView id="mainContent"  disableBounce="true" >
			<ImageView id="profileBannerImage" />
			<ImageView id="profileImage" />
			<Label id="name" />
			<ImageView id="wireForBtnImg" />
			<Button id="profileSettingBtn" />
			<View id="controlBar" />
		</ScrollView>
		
        <TableView id="menuTable" >
            <TableViewSection >
                <TableViewRow id="foodRow" />
            </TableViewSection>
        </TableView>

        <OptionDialog id="settingDialog" title="need more settings...">
            <!-- The Options tag sets the options property. -->
            <Options>
                <Option>logout</Option>
                <Option>cancel</Option>
            </Options>
        </OptionDialog>

		<!-- <Button id="loginBtn" class="beforeLogin afterLogin" zIndex="10" /> -->
	</Window>
</Alloy>