<Alloy>
	<Window class="container">
		<ListView id="listView">
			<Templates>
				<Require id="photoTemplate" src="photoItemTemplate"/>
			</Templates>
			<ListSection id="section"></ListSection>
			<FooterView>
                <View id="loadingFooterView">
                    <ActivityIndicator id="loadingActivity"></ActivityIndicator>
                </View>
            </FooterView>
		</ListView>
		<RightNavButton platform="ios">
			<Button id="cameraBtn" class="cameraBtn" onClick="showCamera"></Button>
		</RightNavButton>
		<Button id="cameraBtn" platform="android" onClick="showCamera"></Button>
	</Window>
</Alloy>