<Alloy>
	<ItemTemplate class="itemTemplate" name="photoItemTemplate">
		<ImageView class="photo" bindId="photo"></ImageView>
		<View backgroundColor="black" opacity="0.2"></View>
		<Label class="photoTitle photoTitleLabel" bindId="title"></Label>
		<Label class="time" bindId="time"></Label>
		<Label class="userName" bindId="userName"></Label>
		<Label class="commentCount" bindId="commentCount"></Label>
		<ImageView class="profileImage" bindId="profileImage"></ImageView>
		<Label class="distance" bindId="distance"></Label>
	</ItemTemplate>
</Alloy>