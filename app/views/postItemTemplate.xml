<Alloy>
	<ItemTemplate class="itemTemplate" name="postItemTemplate">
		<View>
			<ImageView class="photo" bindId="photo"></ImageView>
		</View>
		<View class="opacityScreen"></View>
		
		<Label class="photoTitle" bindId="title"></Label>
		<Label class="time" bindId="time"></Label>
		<Label class="userName" bindId="userName"></Label>
		
		<Label class="commentCount" bindId="commentCount"></Label>
		<MaskedImage id="profileImage" class="profileImage" bindId="profileImage"></MaskedImage>
		<Label class="gpsIcon"></Label>
		<Label class="distance" bindId="distance"></Label>
		<ImageView onLoad="hiddenProfileOnLoad" visible="false" bindId="hiddenProfile"></ImageView>
	</ItemTemplate>
</Alloy>