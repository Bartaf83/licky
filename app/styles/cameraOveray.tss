
".container" : {
  //backgroundColor : 'white'
  layout : 'vertical'
}

".buttonWrap" : {
	backgroundColor : Alloy.Globals.COLORS.whiteGray,
	height : Alloy.Globals.cameraInfo.top,
	opacity : 0.9
}
"#closeBtn" : {
	height : Ti.UI.FILL,
	width :  Ti.UI.SIZE,
	title : L('close'),
	// backgroundLeftCap: 
	image: "images/closeDown.png",
	tintColor: Alloy.Globals.COLORS.red,	// image color
	color: Alloy.Globals.COLORS.red,	// text color
	left : 10
}
"#sendBtn" : {
	height : Ti.UI.FILL,
	width : '50%',
	title : 'Send',
	visible : false
}


"#fieldWrap" : {
	height : 180,
	backgroundColor : 'transparent',
	touchEnabled : false
}
"#contentField" : {
	top: 0,
	tintColor : 'red',
	returnKeyType : Ti.UI.RETURNKEY_SEND,
	visible : false	
}

"#contentLabel" : {
	textAlign : 'left',
	right : 0,
	backgroundColor : 'transparent',
	color : 'white',
	font : {
		fontSize : 40,
		fontFamily : 'AppleSDGothicNeo-Thin'
	},
	minimumFontSize : 40,
	verticalAlign : Ti.UI.TEXT_VERTICAL_ALIGNMENT_BOTTOM,
	height : 80
}

"#fakeFieldWrap" : {
	right : 10,
	left : 10,
	bottom : 0,
	height : 80
}

"#fakeCursor" : {
	width : 2,
	height : 50,
	right : 0,
	bottom : 15,
	images : ['images/1px_red.png','images/1px_trans.png'],
	duration : 500
}

"#contentField[platform=android]" : {
	softKeyboardOnFocus : Ti.UI.Android.SOFT_KEYBOARD_SHOW_ON_FOCUS,
	verticalAlign : Ti.UI.TEXT_VERTICAL_ALIGNMENT_BOTTOM
}
"#fieldOpacityBG" : {
	top:0,
	height : 90,
	backgroundColor : 'black',
	opacity : 0.2
}


".infoWrap" : {
	backgroundColor : 'white',
}

"#geoLabel" : {
	top : 0
}

"#mapWrap" : {
	backgroundColor : 'white',
	height : 88,
	touchEnabled : false
}

"#controlBar" : {
	height: 40,
	backgroundColor: Alloy.Globals.COLORS.whiteGray
}
